                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="20dp"
                android:text="points:"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/pointcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:padding="20dp"
                android:textStyle="bold"/>
